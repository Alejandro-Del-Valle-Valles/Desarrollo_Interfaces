<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.Views.RegisterPage"
             Title="RegisterPage"
             Shell.BackgroundColor="{StaticResource BackgroundLight}" >
    <VerticalStackLayout
        BackgroundColor="#F5F5F5" >
        <!-- First Line -->
        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="30">
            
            <Label
                Text="Título"
                TextColor="Black"
                FontSize="18"
                FontAttributes="Bold"
                Padding="10" 
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            
            <Entry
                x:Name="etyTitle"
                Placeholder="Título del Libro"
                WidthRequest="250"
                BackgroundColor="{StaticResource BackgroundDark}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </HorizontalStackLayout>
        
        <!-- Second Line -->
        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="30">
            
            <Label
                Text="Autor"
                TextColor="Black"
                FontSize="18"
                FontAttributes="Bold"
                Padding="10"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <Entry
                x:Name="etyAuthor"
                Placeholder="Título del Libro"
                WidthRequest="250"
                BackgroundColor="{StaticResource BackgroundDark}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- Third Line -->
        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="30">
            <Label
                Text="Editorial"
                TextColor="Black"
                FontSize="18"
                FontAttributes="Bold"
                Padding="10"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <Entry
                x:Name="etyPublisher"
                Placeholder="Título del Libro"
                WidthRequest="250"
                BackgroundColor="{StaticResource BackgroundDark}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>