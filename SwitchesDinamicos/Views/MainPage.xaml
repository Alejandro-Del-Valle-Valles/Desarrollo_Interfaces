<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwitchesDinamicos.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center">

            <!-- Buttons -->
            <HorizontalStackLayout
                Margin="20"
                Padding="20">
                <Button
                    Clicked="OnAddSwitchClicked"
                    Text="Agregar Switch"/>

                <Button
                    Clicked="OnShowStatsClicked"
                    Text="Mostrar Estados"/>
            </HorizontalStackLayout>

            <!-- Show the dynamic switches -->
            <HorizontalStackLayout
                Padding="20"
                Margin="20">
                <VerticalStackLayout
                    x:Name="DynamicVerticalLayout"
                    Padding="20"
                    Spacing="20"/>
                
                <VerticalStackLayout
                    x:Name="StatusVerticalLayout"
                    Padding="20"
                    Spacing="20"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
