<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teste_01.MainPage">

    <StackLayout Padding="20" Spacing="20">

        <!-- Entry que muestra el valor -->
        <Entry Text="{Binding ValorNumerico, Mode=TwoWay}"
               x:Name="Valor"
               Keyboard="Numeric"
               MaxLength="3"
               Placeholder="50" />

        <!-- Slider que modifica el mismo valor -->
        <Slider Value="{Binding ValorNumerico, Mode=TwoWay}"
                Minimum="0"
                Maximum="100" />

        <Label Text="{Binding ValorNumerico, StringFormat='Valor: {0}'}"
               FontSize="30"
               HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
