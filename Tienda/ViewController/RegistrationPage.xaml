<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tienda.ViewController.RegistrationPage"
             Title="RegistrationPage"
             BackgroundColor="{StaticResource SecondaryDark}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Guardar"
            Clicked="OnSaveClicked"/>
        <ToolbarItem
            Text="Modificar"
            Clicked="OnModifyClicked"/>
        <ToolbarItem
            Text="Eliminar"
            Clicked="OnDeleteClicked"/>
        <ToolbarItem
            Text="Limpiar"
            Clicked="OnClearClicked"/>
    </ContentPage.ToolbarItems>

    <!-- Content -->
    <ScrollView>
        <Grid
            RowDefinitions="1*, 9*"
            ColumnDefinitions="1*, 3*"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            Padding="5"
            Margin="5">

            <!-- First Column: Store info and users -->
            <VerticalStackLayout
                Grid.Column="0"
                Grid.Row="0"
                Padding="5"
                Margin="5">
                <Image
                    Source="san_gines.png"
                    HeightRequest="150"
                    WidthRequest="150"
                    MaximumHeightRequest="150"
                    MaximumWidthRequest="150"
                    Aspect="AspectFit"/>
                <Label
                    Text="San Gines Chocolatería"
                    FontSize="18"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <ScrollView
                Grid.Column="0"
                Grid.Row="1"
                BackgroundColor="{StaticResource Secondary}" 
                Padding="5"
                Margin="5"
                HeightRequest="380">
                <VerticalStackLayout
                        x:Name="vslUsers">
                    <!-- Here goes the Users names-->
                </VerticalStackLayout>
            </ScrollView>

            <!-- Second Column: User creation and modification -->
            <VerticalStackLayout
                Grid.Column="1"
                Grid.RowSpan="2"
                Padding="5"
                Margin="5">
                <!-- Name -->
                <Label
                    Text="Nombre:"
                    TextColor="Black"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>
                <Entry
                    x:Name="etyName"
                    Placeholder="Nombre de la persona"
                    FontSize="18"
                    Width="300"
                    Margin="5"/>

                <!-- Surname -->
                <Label
                    Text="Apellidos:"
                    TextColor="Black"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>
                <Entry
                    x:Name="etySurname"
                    Placeholder="Apellidos de la persona"
                    FontSize="18"
                    Width="300"
                    Margin="5"/>

                <!-- City -->
                <Label
                    Text="Ciudad:"
                    TextColor="Black"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>
                <Entry
                    x:Name="etyCity"
                    Placeholder="Ciudad"
                    FontSize="18"
                    Width="300"
                    Margin="5"/>

                <!-- Email -->
                <Label
                    Text="Correo Electrónico:"
                    TextColor="Black"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>
                <Entry
                    x:Name="etyEmail"
                    Placeholder="Correo (Debe ser único)"
                    FontSize="18"
                    Width="300"
                    Margin="5"/>

                <!-- Commentary -->
                <Label
                    Text="Comentarios:"
                    TextColor="Black"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>
                <Entry
                    x:Name="etyComents"
                    Placeholder="Nombre de la persona"
                    FontSize="18"
                    Width="300"
                    Height="50"
                    Margin="5"/>

                <!-- Is VIP -->
                <HorizontalStackLayout>
                    <CheckBox
                        x:Name="chbIsVip"/>
                    <Label
                        Text="VIP"
                        TextColor="Black"
                        FontSize="18"
                        Padding="5"
                        Margin="5"/>
                    <Label/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>