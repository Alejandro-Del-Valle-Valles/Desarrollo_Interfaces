<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tienda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tienda.ViewController"
    Title="Tienda"
    BackgroundColor="{StaticResource Primary}"
    TitleColor="{StaticResource SecondaryDarkText}"
    TabBarBackgroundColor="{StaticResource Primary}"
    TabBarTitleColor="{StaticResource SecondaryDarkText}"
    TabBarUnselectedColor="Black"
    TabBarForegroundColor="{StaticResource SecondaryDark}">

    <TabBar>
        <ShellContent
            Title="Bienvenida"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"/>

        <ShellContent
            Title="Alta"
            ContentTemplate="{DataTemplate local:RegistrationPage}"
            Route="RegistrationPage"/>

        <ShellContent
            Title="Consultar Clientes"
            ContentTemplate="{DataTemplate local:CustomersConsultationPage}"
            Route="CustomersConsultationPage"/>

        <ShellContent
            Title="Busqueda personalizada de clientes"
            ContentTemplate="{DataTemplate local:SearchCostumerPage}"
            Route="SearchCostumerPage"/>
    </TabBar>

</Shell>
