<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tareas.Views.CreateTaskPage"
             Title="Creación de Tareas">
    <ScrollView>
        <Border
            BackgroundColor="AliceBlue"
            StrokeThickness="5"
            StrokeShape="RoundRectangle 20, 0, 0, 20"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Width="600"
            WidthRequest="600"
            Height="550"
            HeightRequest="550"
            Padding="5"
            Margin="5">
            <VerticalStackLayout>
                <Label
                    Text="Crear Tarea"
                    TextColor="Black"
                    FontFamily="Robot"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Padding="5"/>

                <!-- Title -->
                <Label
                    Text="Título de la tarea:"
                    TextColor="Black"
                    FontFamily="Robot"
                    FontSize="18"
                    Padding="5"/>

                <Entry
                    x:Name="TitleEntry"
                    TextColor="Black"
                    Placeholder="Título"
                    HorizontalOptions="Fill"
                    MaxLength="50"
                    Margin="5"
                    ClearButtonVisibility="WhileEditing"
                    IsSpellCheckEnabled="True"
                    IsTextPredictionEnabled="True"/>

                <!-- Description -->
                <Label
                    Text="Comentario:"
                    TextColor="Black"
                    FontFamily="Robot"
                    FontSize="18"
                    Padding="5"/>

                <Editor
                    x:Name="CommentEditor"
                    TextColor="Black"
                    Placeholder="Comentarios sobre la tarea"
                    HorizontalOptions="Fill"
                    Height="100"
                    HeightRequest="100"
                    Margin="5"
                    IsSpellCheckEnabled="True"
                    IsTextPredictionEnabled="True"/>

                <!-- Delivery Date -->
                <Label
                    Text="Fecha de Entrega:"
                    TextColor="Black"
                    FontFamily="Robot"
                    FontSize="18"
                    Padding="5"/>

                <DatePicker
                    x:Name="DeliveryDate"
                    TextColor="Black"
                    HorizontalOptions="Fill"
                    Height="50"
                    HeightRequest="50"
                    Margin="5"/>

                <!-- Save Button -->
                <Button
                    Text="Guardar Tarea"
                    TextColor="Black"
                    BackgroundColor="Aquamarine"/>
            </VerticalStackLayout>
        </Border>
    </ScrollView>
</ContentPage>