<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tareas.Views.ListTaskPage"
             Title="Lista de Tareas">
    <ScrollView
        Padding="10"
        Margin="10"
        BackgroundColor="Azure"
        HorizontalOptions="Center">

        <CollectionView
            x:Name="CustomersView">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        BackgroundColor="DarkSeaGreen"
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 10,10,10,10">
                        <VerticalStackLayout>
                            <!-- Title -->
                            <HorizontalStackLayout>
                                <Label
                                    Text="TÃ­tulo: "
                                    TextColor="Black"
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    Padding="10"/>

                                <Label 
                                    Text="{Binding Title}"
                                    TextColor="Black"
                                    FontSize="18"
                                    Padding="10" />
                            </HorizontalStackLayout>

                            <!-- Comment -->
                            <HorizontalStackLayout>
                                <Label
                                    Text="Comentario: "
                                    TextColor="Black"
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    Padding="10"/>

                                <Label 
                                    Text="{Binding Comment}"
                                    TextColor="Black"
                                    FontSize="18"
                                    Padding="10" />
                            </HorizontalStackLayout>

                            <!-- Delivery Date -->
                            <HorizontalStackLayout>
                                <Label
                                    Text="Fecha de Entrega: "
                                    TextColor="Black"
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    Padding="10"/>

                                <Label 
                                    Text="{Binding DeliveryDate}"
                                    TextColor="Black"
                                    FontSize="18"
                                    Padding="10" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </ScrollView>
</ContentPage>