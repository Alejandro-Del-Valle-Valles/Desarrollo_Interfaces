<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tareas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tareas.Views"
    Title="Tareas">

    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Crear Tarea"
        ContentTemplate="{DataTemplate local:CreateTaskPage}"
        Route="CreationTaskPage" />

    <ShellContent
        Title="Ver Tareas"
        ContentTemplate="{DataTemplate local:ListTaskPage}"
        Route="ListTaskPage" />

</Shell>
