<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotasRapidas.Views.MainPage">

    <ScrollView>
        <Border
            BackgroundColor="AliceBlue"
            StrokeThickness="5"
            StrokeShape="RoundRectangle 20, 0, 20, 20"
            Width="600"
            Height="450"
            Padding="10"
            Margin="10"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            
            <VerticalStackLayout>
                <Label
                    Text="Título"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>

                <Entry
                    x:Name="TitleEntry"
                    Placeholder="Título"
                    TextColor="Black"
                    HorizontalOptions="Fill"
                    ClearButtonVisibility="WhileEditing"/>

                <Label
                    Text="Contenido"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>

                <Editor
                    x:Name="ContentEditor"
                    TextColor="Black"
                    Placeholder="Escribe tus comentarios aquí"
                    HorizontalOptions="Fill"
                    Height="250"/>
            </VerticalStackLayout>
        </Border>
    </ScrollView>

</ContentPage>
