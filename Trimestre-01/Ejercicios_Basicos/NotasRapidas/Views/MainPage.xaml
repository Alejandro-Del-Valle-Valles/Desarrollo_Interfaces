<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotasRapidas.Views.MainPage">

    <ScrollView>
        <Border
            BackgroundColor="AntiqueWhite"
            StrokeThickness="5"
            StrokeShape="RoundRectangle 20, 0, 20, 20"
            Width="600"
            WidthRequest="600"
            Height="600"
            HeightRequest="600"
            Padding="10"
            Margin="10"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            
            <VerticalStackLayout>
                <!-- Title -->
                <Label
                    Text="Título"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>

                <Entry
                    x:Name="TitleEntry"
                    Placeholder="Título"
                    TextColor="Black"
                    BackgroundColor="AliceBlue"
                    HorizontalOptions="Fill"
                    ClearButtonVisibility="WhileEditing"
                    Margin="5"/>

                <!-- Comment -->
                <Label
                    Text="Contenido"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="18"
                    Padding="5"
                    Margin="5"/>

                <Editor
                    x:Name="ContentEditor"
                    TextColor="Black"
                    BackgroundColor="AliceBlue"
                    Placeholder="Escribe tus comentarios aquí"
                    HorizontalOptions="Fill"
                    Height="350"
                    HeightRequest="350"
                    Margin="5"/>

                <!-- Save -->
                <Button
                    Clicked="OnSaveClicked"
                    Text="Guardar"
                    BackgroundColor="Aquamarine"
                    HorizontalOptions="Fill"
                    Margin="5"
                    Padding="5"/>
            </VerticalStackLayout>
        </Border>
    </ScrollView>

</ContentPage>
