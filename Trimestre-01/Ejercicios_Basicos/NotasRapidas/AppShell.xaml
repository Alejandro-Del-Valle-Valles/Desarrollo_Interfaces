<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NotasRapidas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NotasRapidas.Views"
    Title="Notas Rapidas"
    TabBarBackgroundColor="{StaticResource Gray900}"
    TabBarTitleColor="{StaticResource PrimaryDark}"
    TabBarUnselectedColor="White">

    <TabBar>
        <ShellContent
            Title="Crear Nota"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Mis Notas"
            ContentTemplate="{DataTemplate local:NotesPage}"
            Route="NotesPage"/>
    </TabBar>

</Shell>
