<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimulacroExamen.VistaModelo.AdministracionPage"
             Title="Administrar Productos">
    <VerticalStackLayout>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Grid ColumnDefinitions="200, *, 200" Padding="10" Margin="10,0">
                <Label Grid.Column="0" Text="Nombre" FontAttributes="Bold" TextDecorations="Underline"/>
                <Label Grid.Column="1" Text="Descripcion" FontAttributes="Bold" TextDecorations="Underline"/>
                <Label Grid.Column="2" Text="Precio" FontAttributes="Bold" TextDecorations="Underline"/>
            </Grid>

            <Border Stroke="Gray" StrokeThickness="1" HeightRequest="300">
                <CollectionView x:Name="ProductosColeccion" 
                                SelectionMode="Single" 
                                SelectionChanged="OnProductoChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="200, *, 200" Padding="10">
                                <Label Grid.Column="0" Text="{Binding Nombre}" />
                                <Label Grid.Column="1" Text="{Binding Descripcion}" />
                                <Label Grid.Column="2" Text="{Binding Precio}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </VerticalStackLayout>

        <HorizontalStackLayout Padding="20" Spacing="10" HorizontalOptions="Fill">
            <Entry x:Name="EtNombre"
                   IsEnabled="False"
                   WidthRequest="225"
                   BackgroundColor="AliceBlue"
                   TextColor="Black"
                   Placeholder="Nombre del producto"
                   Margin="10"/>

            <Entry x:Name="EtDescripcion"
                   BackgroundColor="AliceBlue"
                   WidthRequest="600"
                   TextColor="Black"
                   Placeholder="DescripciÃ³n del producto"
                   Margin="10"/>

            <Entry x:Name="EtPrecio"
                   TextChanged="OnPrecioTextChanged"
                   BackgroundColor="AliceBlue"
                   WidthRequest="225"
                   TextColor="Black"
                   Placeholder="Precio del producto"
                   Margin="10"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Padding="20" Spacing="10" HorizontalOptions="End">
            <Button Text="Actualizar Producto"
                    Clicked="OnActualizarClicked"
                    BackgroundColor="Aquamarine"
                    Padding="10"
                    Margin="10"/>

            <Button Text="Eliminar Producto"
                    Clicked="OnEliminarClicked"
                    BackgroundColor="Red"
                    Padding="10"
                    Margin="10"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>